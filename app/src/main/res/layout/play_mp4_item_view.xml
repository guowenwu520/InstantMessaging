<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <VideoView
        android:id="@+id/videoView"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/playSHiping"
        android:layout_centerInParent="true"
        android:src="@drawable/play"
        android:layout_width="65dp"
        android:layout_height="65dp" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/head"
                android:layout_width="40dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/name"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/follor"
                android:layout_marginLeft="15dp"
                android:padding="4dp"
                android:layout_width="60dp"
                android:gravity="center"
                android:background="@drawable/no_follow_button_bg"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="关注" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/msg"
                android:layout_marginLeft="30dp"
                android:padding="2dp"
                android:text="hahahd阿斯顿发射点"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="54dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/praise"
                    android:src="@drawable/lave_normal"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/praiseNum"
                    android:text="0"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/collect"
                    android:src="@drawable/sollect_normal2"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/collectNum"
                    android:text="0"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/commm"
                    android:src="@drawable/commentwiter"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/commmNum2"
                    android:text="0"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/befusd"
        android:background="@drawable/edit_view2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <RelativeLayout
            android:id="@+id/topd"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="共0条评论"
                android:textSize="19sp"
                android:id="@+id/commitNum"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/errrer"
                android:src="@drawable/erroer"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_alignParentBottom="true"
                android:background="@color/grey_400"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </RelativeLayout>
        <include
            android:id="@+id/button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            layout="@layout/edit_button_input"/>
        <FrameLayout
            android:layout_below="@id/topd"
            android:id="@+id/commityframe"
            android:layout_above="@id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

    </RelativeLayout>
</RelativeLayout>