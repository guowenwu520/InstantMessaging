<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_card_view" parent="CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="title_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">true</item><!--可复制-->
    </style>

    <style name="content_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textIsSelectable">true</item><!--可复制-->
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">18dp</item>
    </style>
</resources>
